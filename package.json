{
  "name": "brewapp-api",
  "version": "1.0.0",
  "description": "This is a node server with typescript and express",
  "main": "index.js",
  "scripts": {
    "vercel-build": "echo hello",
    "dev": "nodemon src/index.ts",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "serve": "node dist/index.js"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "nodemon": "^3.0.1",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
